.personal-content {
  width: 1200px;
  margin: 0 auto;
  padding: 40px 0 0;
  min-height:calc(100% - 207px);
  .qeCode {
    display:block;
    margin:0 auto;
    width:200px;
    height:200px;
  }
  .main-block {
    background: $sub-background-color;
    border: 1px solid $bolok-border-color;
    margin: 0 auto 20px;
    border-radius: 2px;
    padding-bottom: 10px; 
  }
  .block-header{
    height: 40px;
    line-height: 40px
    padding-left: 40px;
    font-size:14px; 
    border-bottom:1px solid $base-background-color;
    font-weight:bold;
    background: $heade-background-color;
    .tab_nav {
      span {
        display: block;
        text-align: center;
        float: left;
        padding: 0 40px;
        cursor: pointer;
        margin-right: 10px;
        font-size:14px; 
        &.selected {
          border-bottom: 2px solid $blue-font-color;
        }
      }
    }
  }
  .table-content {
    td ,th {
      height:35px;
      line-height: 26px;
      display:table-cell; 
      vertical-align:middle;
      font-size:12px;
    }
    tr{
      border-bottom:2px solid $subheade-background-color;
    }
    tr:last-child{
      border-bottom:0;
    }
    .tr-left {
      text-align: right;
      color:$explain-font-color;
    }
    .tr-center {
      padding-left: 50px;
    }
    .tr-right {
      text-align: right;
      padding-right: 55px;
      .QEcode{
        color:$yellow-color
      }
    }
    tr.oddback{
      background:$subheade-background-color
    }
  }
  .history-table-box {
    min-height: 340px;
  }
  .history-table {
    text-align: left;
    font-size: 12px;
    color:$explain-font-color;
    th {
      color:$explain-font-color;
    }
    .tr-left {
      text-align: left;
      padding-left:70px;
    }
    .tr-center {
      padding-left: 70px;
    }
    td {
      width: 24%;
      height: 34px;
    }
  }
  .label-state {
    padding: 0 22px;
    display:inline-block;
    line-height: 38px;
    border-radius: 2px;
    font-size: 16px;
    &.state-not {
      background: $gray-font-color;
    }
    &.state-success{
      background: $yellow-color;
    } 
  }
  .edit-name-input {
    text-indent: 10px;
    width: 258px;
  }
  .capital-input{
    width: 200px;
    text-indent: 10px;
    height:25px;
  }
  .disabled-input {
    border: none;
    cursor: default;
    background : none;
    text-indent: 0;
  }
  .yqm-url {
    width: 490px;
    white-space:normal;
    word-break:break-all;
    font-size: 12px;
    color:$explain-font-color;
  }
  .red-font {
    color: $red-color;
    font-size: 12px;
  }
  .form-box {
    width : 490px;
    margin: 0 auto;
    margin-bottom: 60px;
    h3 {
      margin: 20px 0 40px;
      text-align: center;
      color:$blue-font-color;
      font-size: 20px;
    }
  }
  .button-inline {
    margin-top:40px;
    button {
      height: 52px;
      width: 100%;
      font-size: 16px;
      border-radius:4px;
    } 
  }
  .switch-btn {
    display: inline-block;
    height: 24px;
    border-radius: 10px;
    position: relative;
    line-height: 24px;
    font-size: 12px;
    background: $base-background-color;
    color: $blue-font-color;
    width: 44px;
    padding: 0 8px 0 24px;
    cursor: pointer;
    overflow: hidden;
    vertical-align: middle;
    .icon {
      position: absolute;
      height: 20px;
      width: 20px;
      border-radius: 50%;
      background: $blue-font-color;
      top: 2px;
      left: 2px;
    }
    &.selected {
      background: $blue-font-color;;
      color: $base-font-color;
      text-align: left;
      // width: 40px;
      padding: 0 24px 0 8px;
      .icon {
        right: 2px;
        left: auto;
        background: $base-font-color;
      }
    }
  }
  #payment-block {
    .block-header {
      .text {
        font-size: 12px;
        padding-left 20px;
        color:$explain-font-color;
      }
      .add-payment-btn {
        float: right;
        margin-right: 55px;
      }
    }
    .table-content {
      .tr-left {
        // text-align: left;
        line-height: 35px;
        // padding-left: 70px;
        img  {
          margin-top: 3px;
          float: left;
          vertical-align: middle;
          border-radius: 100%;
        }
        .title {
          margin-left: 10px;
          float: left;
          line-height: 25px;
          margin-top: 3px;
        }
      }
      .tr-center {
        // padding-left: 20px;
        img{
          vertical-align:middle;
          margin-right: 5px;
        }
        span {
          margin-right: 10px;
        }
        .title{
          display: inline-block;
          width: 50px;
        }
        .paswd{
          display: inline-block;
          width: 100px;
        }
        .prese{
          margin-top: 10px;
          height:40px;
          width: 150px
        }
        .tips{
          margin-left: 20px;
        }
        .error{
          margin-left: 20px;
          color: red;
        }
      
      }
      .tr-center-r{
           a {
          margin-left: 10px;
          vertical-align: middle;
        }
      }
      .tr-right {
        a {
          margin-left: 10px;
          vertical-align: middle;
        }
      }
    }
  }
}
#payment {
  .upload-img-block {
    .tit {
      display: none;
      float: none;
      padding: 0;
      width: 100%;
      color: #7080a3;
      font-size: 12px;
      margin: 20px 0 10px;
      text-align: left;
    }
    .upload-main {
      padding: 0;
      margin-top: 15px;
      .upload-btn {
        float: left;
      }
      .remarks {
        padding: 14px 0 0 160px;
      }
      .select-fileBtn {
        height: 170px;
        width: 100%;
        line-height: 170px;
        margin-top: 10px;
      }
    }
  }
}
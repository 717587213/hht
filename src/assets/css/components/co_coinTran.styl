.co-coinTran {
  color:  $base-font-color
  transition:all 0.3s linear
  .trade-center {
      padding: 10px 10px 0 10px;
      width: auto;
      min-width: 1160px;
      // max-width: 1920px
  }
  .left-sidebar {
    float: left;
    width: 283px;
  }
  .right-main {
    width:calc(100% - 293px)
    float:left;
    padding-left: 10px;
  }
  .left-column {
    float: left;
    width: 310px;
    margin-right: 10px;
    position: relative;
  }
  .center-column {
    float: left;
    width:calc(100% - 585px)
    margin-right: 10px;
    position: relative;
  }
  .right-column {
    width: 255px;
    float: left;
  }
  .item_block {
    background: $sub-background-color
    margin-bottom: 10px;
    .item_block_title {
      line-height: 30px;
      padding-left: 10px;
      background: $heade-background-color;
      font-size: 14px;
    }
    .item_block_tab {
      background: $heade-background-color;
      line-height: 25px;
      .tab_menu {
        display: inline-block;
        border-top: 2px solid $heade-background-color
        padding: 0 15px;
        cursor: pointer;
        &.selected {
          border-color: $input-focus-border;
          color: $input-focus-border;
          background: $sub-background-color
        }
      }
    }
    .item_block_content {
      position: relative;
    }
  }
  // 委托交易
  .trading_form {
    padding: 10px;
    .inline_input {
      line-height: 25px;
      height: 25px;
      margin-top: 10px;
      .th {
        float: left;
        width: 24%;
        text-align: center;
      }
      .text-input {
        width: 75%;
        float: right
        line-height: 25px;
        height: 25px;
        .unit {
          float: left;
          width: 55px;
          height: 25px;
          text-align: center;
          background: $input-focus-border;
        }
        .inputText {
          height: 23px;
          line-height: 23px;
          width: 66%;
          padding-left: 4px;
          border-radius: 0;
        }
      }
    }
    .trading_submit_btn {
      margin-top: 20px;
      height: 43px;
      .trading_button {
        width: 48%;
        height: 43px;
        line-height: 43px;
        float: left;
        font-size: 16px;
        text-align: center;
        border-radius: 2px;
        background: $buy-color;
        cursor: pointer;
        color: $white-color;
        &.sell {
          float: right;
          background: $sell-color;
        }
        &.noSubmit {
          opacity: 0.3;
          cursor: no-drop;
        }
      }
    }
    .trading_info {
      padding-top: 10px;
      line-height: 28px;
      color: $explain-font-color;
      .cost {
        height: 24px;
        p {
          width: 48%;
          float: left;
          &.sells {
          float: right    
          }
        }
      }
    }
  }
  // 持有仓位
  .lever_info_block {
    .item_block_content {
      padding: 15px;
      height: 510px;
      overflow: hidden;
    }
    .lever_info {
      background: url(../img/lr_icon.png) no-repeat center center;
      .left_info {
        width: 48%;
        float: left;
      }
      .right_info {
        width: 48%;
        float: right;
        text-align: right;
      }
      .item {
        padding: 10px 0;
        line-height: 22px;
        .num {
          font-size: 14px;
        }
        .tit {
          color: $explain-font-color;
        }
      }
    }
    .risk-bar {
        -ms-flex: 1;
        flex: 1;
        background: linear-gradient(90deg,#00ce96,#ffd400,#eb1919);
        position: relative
    }
    .risk-Percentage {
        width: 100%;
        height: 30px;
        display: -ms-flexbox;
        display: flex
        position: relative;
    }
    .warning_icon {
      top: 9px;
      position: absolute;
      right: 10px;
    }
    .gg_text {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      text-align: center;
      line-height: 30px;
      font-size: 16px;
      color: $white-color;
      text-shadow: 1px 1px 2px #333333;
    }
    .percentage_bar {
      position: absolute;
      width: 50%;
      left: 0;
      top: 0;
      height: 30px;
    }
    .risk-num {
      position: absolute;
      z-index: 9;
      left: 0;
      padding-left: 7px;
      top: 0px;
      height: 30px;
      line-height: 30px;
      border-left: 3px solid $white-color;
      font-size: 14px;
      color: $white-color;
      text-shadow: 2px 2px 3px #333333;
      &.transition {
        transition: all .3s linear;
      }
    }
    .transaction-drag { 
      position: relative; 
      width: calc(100% - 18px); 
      margin-top: 40px;
    } 
    .drag-def,
    .drag-cover { 
      position: absolute; 
      display: block; 
      height: 3px; 
      top: 3px; 
      left: 4px; 
    } 
    .drag-def { 
      width: 100%; 
      background: $border-blue-color; 
    } 
    .drag-cover { 
      background: $input-focus-border; 
    } 
    .drag-turnColor { 
      background: $input-focus-border; 
    } 
    .drag-step { 
      position: absolute; 
      background: $blue-font-color;
      left: 0%; 
      display: block; 
      top: -3px; 
      border-radius: 100%;
      width: 15px;
      height: 15px;
      cursor: pointer;
      z-index:5; 
      &.transition {
        transition: all .2s ease;
      }
    } 
    .transaction-drag i { 
      background: $border-blue-color; 
      position: absolute; 
      top: 0; 
      display: block; 
      width: 10px; 
      height: 10px; 
      cursor: pointer;
      z-index: 4; 
      border-radius: 50%; 
      text-align: right;
    } 
    .transaction-drag i.selected {
      background: $input-focus-border
    }
    .transaction-drag i.drag-step0 { 
      left: calc(25% + 4px); 
    } 
    .drag-step-wrap { 
      display: inline-block; 
      width: 100%; 
      position: relative; 
    }
    .mark {
      display: inline-block;
      width: 30px;
      text-align: center;
      left: -10px;
      top: 20px;
      position: absolute
    }
  } 
  // 币对 列表
  .symbol_block {
    height: 99px;
    .tr-top {
      background: $heade-background-color;
      width: auto;
      td {
        text-align: center;
        color: $explain-font-color;
        width: 180px;
        .symbol_item {
          border-top: 3px solid $heade-background-color;
          border-left: 2px solid $sub-background-color;
          padding: 8px 0 0;
          cursor: pointer;
          h5 {
            font-size: 14px;
          }
          .inof {
            padding: 5px 0;
            line-height: 18px;
          }
          &.selected {
            border-top-color: $input-focus-border;
            border-left: none;
            padding-left: 2px;
            background: $sub-background-color;
            h5 {
              color: $blue-font-color
            }
          }
        }
      }
    }
    .symbol_info {
      padding: 17px 10px;
      li {
        list-style: initial;
        margin-left: 20px;
      }
      .yx {
        color: $input-focus-border;
      }
      .price {
        background: $heade-background-color;
        margin-left: 5px;
        padding: 3px;
      }
    }

  // 委托列表
  .depth-block {
    width: 100%;
    .depth_list {
      .list_item {
        line-height: 22px;
        position: relative
        &.even {
          background:$subheade-background-color;
        }
        span {
          display: inline-block;
          vertical-align: middle;
          position: relative;
          z-index: 2;
          text-align: right;
          overflow: hidden;
        }
        .td_price {
          width: 21%;
          padding-left: 5px;
        }
        .td_number {
          width: 33%;
          color: $explain-font-color;
        }
        .td_total {
          width: 39%;
          padding-right: 10px;
          padding-left: 0;
        }
        &.th {
          line-height: 26px;
          span {
            color: $explain-font-color;
          } 
        }
        .td_bg {
          position: absolute;
          background: $sell-color;
          top: 2px;
          left: 15px;
          width: 0;
          height: 18px;
          opacity: 0.2;
        }
        .num {
